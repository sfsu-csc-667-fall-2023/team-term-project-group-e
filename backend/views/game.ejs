<!DOCTYPE html>
<link href="/css/game.css" rel="stylesheet" type="text/css">
<html>

<head>
  <title>Game <%=gameId%>
  </title>
  <script src="/scripts/chat.js" defer></script>
  <script src="/scripts/games.js" defer></script>

</head>

<body>
  <main>
    <p>Game Room <%=gameId%>
    </p>
    <input type="hidden" name="game-socket-id" id="game-socket-id" value="<%= gameSocketId %>" />
    <input type="hidden" name="user-socket-id" id="user-socket-id" value="<%= userSocketId %>" />
    <input type="hidden" name="game-id" id="game-id" value="<%= gameId %>" />

    <form method="post" action="/game/<%=gameId%>/start" id="start-form">
      <input type="submit" value="Start" />
    </form>

    <div id="game-board">
      <div id="game">
        <h3>User Cards:</h3>
        <div id="opponents">
        </div>
        <h3>Current Card:</h3>
        <div id="current-card">
        </div>
        <h3>Your Cards (<%=user.username%>):</h3>
        <form method="post" action="/game/<%=gameId%>/draw" id="draw-form">
          <input type="submit" value="Draw" />
        </form>
        <div id="player-cards">
        </div>
      </div>
      <div id="message-log">
      </div>
    </div>

    <%- include("partials/chat", { roomId: gameId }); %>
      <a href="/lobby">Back to Lobby</a>
  </main>

</body>

<template id="board-card-template">
  <div class="change-card">
    <div id="card">
      <div id="card-top"></div>
      <div id="card-center"></div>
      <div id="card-bottom"></div>
    </div>

  </div>

</template>

<template id="opponent-template">
  <div class="change-card">
    <div id="card">
      <div class="card-back">
        <div class="card-center">UNO</div>
      </div>
    </div>

    <p id="username"></p>
    <p id="card-count"></p>
  </div>



</template>

<template id="card-template">
  <div class="change-card">
    <div id="card">
      <div id="card-top"></div>
      <div id="card-center"></div>
      <div id="card-bottom"></div>
    </div>
    <form class="user-card" method="post">
      <p></p>
      <input type="hidden" id="card_id">
      <input type="hidden" id="color" />
      <input type="submit" value="Play" />
    </form>
  </div>


</template>

<template id="card-template2">
  <div class="change-card">
    <div id="card">
      <div id="card-top"></div>
      <div id="card-center"></div>
      <div id="card-bottom"></div>
    </div>
    <p></p>
    <div class="grid">
      <form class="user-card red" method="post">
        <input type="hidden" id="card_id" />
        <input type="hidden" id="color" value="red" />
        <input type="submit" class="play-button red" value="Red" />
      </form>
      <form class="user-card green" method="post">
        <input type="hidden" id="card_id" />
        <input type="hidden" id="color" value="green" />
        <input type="submit" class="play-button green" value="Green" />
      </form>
      <form class="user-card blue" method="post">
        <input type="hidden" id="card_id" />
        <input type="hidden" id="color" value="blue" />
        <input type="submit" class="play-button blue" value="Blue" />
      </form>
      <form class="user-card yellow" method="post">
        <input type="hidden" id="card_id" />
        <input type="hidden" id="color" value="yellow" />
        <input type="submit" class="play-button yellow" value="Yellow" />
      </form>
    </div>
  </div>
</template>

</html>